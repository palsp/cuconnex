{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@smartComponents/*": ["src/components/smartComponents/*"],
      "@dumbComponents/*": ["src/components/dumbComponents/*"],
      "@pages/*": ["src/Pages/*"],
      "@icons/*": ["src/components/dumbComponents/UI/Icons/*"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"]
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true
  },
  "include": ["src"]
}
